<div class="row h3">
  パスワード再設定
</div>

<br>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">

    <div class="col rounded bg-info">
      <div class="field">
        <%= f.label :password, "新しいパスワード" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control-plaintext text-white" %>
      </div>
    </div>

    <div class="col rounded bg-info">
      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control-plaintext text-white" %>
      </div>
    </div>

    <br>

    <div class="row align-items-center justify-content-between">
      <div class="col-8">
        <%= render "devise/shared/links" %>
      </div>
      <div class="actions">
        <%= f.submit("再設定", class: "btn btn-primary") %>
      </div>
    </div>
  </div>
<% end %>
