<head>
  <title>Sign up</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<div class="container-fluid text-light" style="background-color: rgb(21, 32, 43)">

  <div class="row">
    <div class="col h3">
      Sign up
    </div>
  </div>

  <br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
      
    <div class="col form-group">

      <div class="col rounded" style="background-color: rgb(21, 44, 66)">
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control-plaintext text-white" %>
        </div>
      </div>

      <br>

      <div class="col rounded" style="background-color: rgb(21, 44, 66)">
        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true, class: "form-control-plaintext text-white" %>
        </div>
      </div>

      <br>

      <div class="col rounded" style="background-color: rgb(21, 44, 66)">
        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control-plaintext text-white"  %>
        </div>
      </div>

      <div class="col rounded" style="background-color: rgb(21, 44, 66)">
        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control-plaintext text-white"  %>
        </div>
      </div>

      <br>

      <div class="actions">
        <%= f.submit("Sign up", class: "btn btn-primary") %>
      </div>

    </div>
  <% end %>
  <%= render "devise/shared/links" %>

</div>