<div class="row h3">
  アカウント登録
  　sendgridを利用
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    
  <div class="form-group">

    <div class="col rounded bg-info">
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control-plaintext text-white" %>
      </div>
    </div>

    <br>

    <div class="col rounded bg-info">
      <div class="field">
        <%= f.label :名前 %>
        <%= f.text_field :name, autofocus: true, class: "form-control-plaintext text-white" %>
      </div>
    </div>

    <br>

    <div class="col rounded bg-info">
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control-plaintext text-white"  %>
      </div>
    </div>

    <div class="col rounded bg-info">
      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control-plaintext text-white"  %>
      </div>
    </div>

    <br>

    <div class="row justify-content-between align-middle">
      <div class="col-8">
        <%= render "devise/shared/links" %>
      </div>
      <div class="actions">
        <%= f.submit("登録", class: "btn btn-primary") %>
      </div>
    </div>
  </div>
<% end %>