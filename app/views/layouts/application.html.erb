<!DOCTYPE html>
<html>
  <head>
    <title>Twitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <ul>
        <p>
        <%= link_to "・My Account", profile_path(id: current_user.id) %>
        <%= link_to "・Time Line", tweets_path %>
        <%= link_to "・Sign Out", destroy_user_session_path, method: :delete %>
        </p>
      </ul>
    </header>
    <hr>
    <div class= "main">
      <%= yield %>
    </div>
    </hr>
  </body>
</html>
