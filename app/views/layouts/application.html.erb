<!DOCTYPE html>

<html>
  <head>
    <title>Twitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid text-light" style="background-color: rgb(21, 32, 43)">
      <header id="notice">
        <%= notice %>
      </header>

      <div class= "main">
        <%= yield %>
      </div>

      <br>

      <footer>
        <div class="row justify-content-around border-secondary border-top">
          <div>
            <%= link_to "・My Account", profile_path(id: current_user.id), class:"btn btn-link" %>
          </div>
          <div>
            <%= link_to "・TimeLine", timelines_index_path, class:"btn btn-link" %>
          </div>
            <%= link_to "・Sign Out", destroy_user_session_path, method: :delete, class:"btn btn-link" %>
          </div>
        </div>
      </footer>
    </div>
  </body>

</html>
