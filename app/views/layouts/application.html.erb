<!DOCTYPE html>
<html>
  <head>
    <title>komimi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-dark">
    <div class="container text-light">
      <div class="row">
        <div class="col-2 text-center h3 sticky-top" style="height: 100%">
          <div>
            <%= link_to root_path, style: "color: white", class:"btn btn-dark btn-lg px-0" do %>
              <i class="fab fa-twitter"></i>
            <% end %>
          </div>
          <div>
            <%= link_to root_path, style: "color: white", class:"btn btn-dark btn-lg px-0" do %>
              <i class="fas fa-home"></i>
            <% end %>
          </div>
          <div>
            <%= link_to user_profile_path(current_user, current_user.profile), style:"color: white", class:"btn btn-dark btn-lg px-0" do %>
              <i class="fas fa-user"></i>
            <% end %>
          </div>
          <div>
            <%= link_to users_path, style:"color: white", class:"btn btn-dark btn-lg px-0" do %>
              <i class="fas fa-users"></i>
            <% end %>
          </div>
          <div>
            <%= link_to destroy_user_session_path, method: :delete, style:"color: white", class:"btn btn-dark btn-lg px-0" do %>
              <i class="fas fa-sign-out-alt"></i>
            <% end %>
          </div>
        </div>
        <div class="col-9 border border-secondary">
          <% if notice %>
            <div id="notice" class="notice col rounded bg-info py-2">
          　　<%= notice %>
            </div>
          <% end %>
          <% if alert %>
            <div id="alert" class="alert col rounded bg-info py-2">
              <%= alert %>
            </div>
          <% end %>
          <div>
            <%= yield %>
          </div>
          </div>
        <div class="col-1">
          <div class="row">
          </div>
        </div>
      </div>
    </div>
  </body>
</html>