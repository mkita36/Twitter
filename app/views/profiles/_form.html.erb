<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
        <% profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <br>

  <div class="col form-group">

    <div class="col rounded" style="background-color: rgb(21, 44, 66)">
      <label>
        <%= form.label :プロフィール画像 %>
        <br>
        <div class="row btn btn-link">
          画像ファイルを選択
          <%= form.file_field :image, style:"display:none" %>
        </div>
      </label>
    </div>

    <br>
    
    <div class="col rounded" style="background-color: rgb(21, 44, 66)">
      <div>
        <%= form.label :自己紹介 %>
        <%= form.text_area :self_introduction, class: "form-control-plaintext text-white" %>
      </div>
    </div>

    <br>
    
    <div class="col rounded" style="background-color: rgb(21, 44, 66)">
      <div>
        <%= form.label :居住地 %>
        <%= form.text_field :live_in, class: "form-control-plaintext text-white" %>
      </div>
    </div>

    <br>
    
    <div class="col rounded" style="background-color: rgb(21, 44, 66)">
      <div>
        <%= form.label :"誕生日" %>
        <%= form.date_field :birthday, :placeholder => "0000-00-00", class: "form-control-plaintext text-white" %>
      </div>
    </div>
    
    <br>
    
    <div class="actions">
      <%= form.submit("登録", class: "btn btn-primary") %>
    </div>
  </div>

<% end %>