<h1>My Account</h1>

<p id="notice"><%= notice %></p>

<p>
  <strong>プロフィール画像（後で実装）</strong>
  <strong><%= current_user.name %></strong>
</p>

<p>
  <strong>Self introduction:</strong>
  <%= current_user.profile.self_introduction %>
</p>

<p>
  <strong>Birthday:</strong>
  <%= current_user.profile.birthday %>
</p>

<p>
  <strong>Live in:</strong>
  <%= current_user.profile.live_in %>
</p>

<%= link_to 'Edit Account', edit_profile_path(current_user) %>

<p>
  <% current_user.tweets.each do |tweet| %>
    <tr align="left">
      <p><%= tweet.content %>
      <%= link_to "Edit", edit_tweet_path(tweet) %>
      <%= link_to "Destroy", tweet, method: :delete, data: { confirm: 'Are you sure?' } %>
      </p>
  <% end %>
</p>
