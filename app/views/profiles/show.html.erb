<div class="row align-items-center">
  <div class="col-1">
    <div class="h3 font-weight-bold">
      <%= link_to "←", :back %>
    </div>
  </div>
  <div class="col-11 h3">
    <%= User.find(@profile.user_id).name %>
  </div>
</div>

<div class="row align-items-end">
  <div class="col-3">
    <%= image_tag @profile.image.variant(combine_options:{resize:"80x80^",crop:"80x80+0+0",gravity: :center}).processed, class:"rounded-circle" %>
  </div>
  <% if @profile.user_id == current_user.id %>
    <div class="col-6">
      <button type="button" class="btn btn-sm btn-outline-primary">
        <%= link_to 'プロフィール編集', edit_profile_path(current_user) %>
      </button>
    </div>
    <div class="col-3">
      <button type="button" class="btn btn-sm btn-outline-primary">
        <%= link_to 'Replies', tweet_replies_path(current_user) %>
      </button>
    </div>
  <% end %>
</div>

<br>

<div class="row">
  <div class="col">
    <%= simple_format(@profile.self_introduction) %>
  </div>
</div>

<div class="row">
  <div class="col-3">
    誕生日:
  </div>
  <div class="col-9">
    <%= l @profile.birthday, format: :default %>
  </div>
</div>

<div class="row">
  <div class="col-3">
    居住地:
  </div>
  <div class="col-9">
  <%= @profile.live_in %>
  </div>
</div>

<div class="row">
  <div class="col-3">
    登録日:
  </div>
  <div class="col-9">
    <%= l @profile.created_at, format: :date_only %>
  </div>
</div>

<div class="row border-top border-bottom border-secondary">
  <div class="col">
    Tweets
  </div>
</div>

<%= render @tweets %>