<div class="row align-items-center py-1">
  <div class="col-2 col-sm-1">
    <div class="h3 font-weight-bold">
      <%= link_to "←", session[:path_back_from_profile] %>
    </div>
  </div>
  <div class="col-10 col-sm-11 h3">
    <%= @user.name %>
  </div>
</div>
<div class="row align-items-end">
  <div class="col-5">
    <%= render 'image', profile: @profile %>
  </div>
  <div class="col-7">
    <% if @user.id == current_user.id %>
      <div class="row">
        <div>
          <%= link_to 'プロフィール編集', edit_profile_path(current_user), class:"btn btn-sm btn-outline-primary" %>
        </div>
      </div>
      <div class="row pt-1">
        <div>
          <%= link_to 'Replies', user_replies_path(current_user), class:"btn btn-sm btn-outline-primary" %>
        </div>
      </div>
    <% else %>
      <div class="row">
      <% if current_user.following?(@user) %>
        <div>
          <%= link_to 'フォローを外す', unfollow_path(@user), method: :POST, class: "btn btn-sm btn-outline-primary" %>
        </div>
      <% else %>
        <div>
          <%= link_to 'フォローする', follow_path(@user), method: :POST, class: "btn btn-sm btn-primary text-info" %>
        </div>
      <% end %>
      </div>
    <% end %>
  </div>
</div>
<br>
<div class="row">
  <div class="col">
    <%= simple_format(@profile.self_introduction) %>
  </div>
</div>
<div class="row py-1">
  <div class="col">
    フォロー数 :　　
    <%= @user.follower.count %>
    　　
    <%= link_to "内訳", followindex_path(@user.id) %>
  </div>
</div>
<div class="row py-1">
  <div class="col">
    フォロワー数 :　
    <%= @user.followed.count %>
    　　
    <%= link_to "内訳", followerindex_path(@user.id) %>
  </div>
</div>
<div class="row py-1">
  <div class="col-5">
    誕生日:
  </div>
  <div class="col-7">
    <% if @profile.birthday.present? %>
      <%= l @profile.birthday, format: :default%>
    <% end %>
  </div>
</div>
<div class="row py-1">
  <div class="col-5">
    居住地:
  </div>
  <div class="col-7">
    <%= @profile.live_in %>
  </div>
</div>
<div class="row pt-1 pb-2">
  <div class="col-5">
    登録日:
  </div>
  <div class="col-7">
    <%= l @profile.created_at, format: :date_only %>
  </div>
</div>
<div class="row border-top border-secondary py-1">
  <div class="col">
    過去のTweet
  </div>
</div>
<%= render @tweets %>