<div class="row align-items-center py-1">
  <div class="col-1">
    <div class="h3 font-weight-bold">
      <%= link_to "←", session[:path_back_from_profile] %>
    </div>
  </div>
  <div class="col-5 h3">
    <%= @user.name %>
  </div>
</div>
<div class="row align-items-end">
  <%= render 'image', profile: @profile %>
  <% if @user.id == current_user.id %>
    <div class="col-6">
      <div>
        <%= link_to 'プロフィール編集', edit_user_profile_path(current_user, current_user.profile), class:"btn btn-sm btn-outline-primary" %>
      </div>
    </div>
    <div class="col-3">
      <div>
        <%= link_to 'Replies', user_replies_path(current_user), class:"btn btn-sm btn-outline-primary" %>
      </div>
    </div>
  <% else %>
    <% if current_user.following?(@user) %>
      <div>
        <%= link_to 'フォローを外す', unfollow_path(@user), method: :POST, class: "btn btn-sm btn-outline-primary" %>
      </div>
    <% else %>
      <div>
        <%= link_to 'フォローする', follow_path(@user), method: :POST, class: "btn btn-sm btn-primary text-info" %>
      </div>
    <% end %>
  <% end %>
</div>
<br>
<div class="row">
  <div class="col">
    <%= simple_format(@profile.self_introduction) %>
  </div>
</div>
<div class="row py-1">
  <div class="col-5">
    フォロー数:
  </div>
  <div class="col-1">
    <%= @user.follower.count %>
  </div>
  <div class="col-6">
    <%= link_to "内訳", followindex_path(@user.id) %>
  </div>
</div>
<div class="row py-1">
  <div class="col-5">
    フォロワー数:
  </div>
  <div class="col-1">
    <%= @user.followed.count %>
  </div>
  <div class="col-6">
    <%= link_to "内訳", followerindex_path(@user.id) %>
  </div>
</div>
<div class="row py-1">
  <div class="col-5">
    誕生日:
  </div>
  <div class="col-7">
    <% if @profile.birthday.present? %>
      <%= l @profile.birthday, format: :default%>
    <% end %>
  </div>
</div>
<div class="row py-1">
  <div class="col-5">
    居住地:
  </div>
  <div class="col-7">
    <%= @profile.live_in %>
  </div>
</div>
<div class="row pt-1 pb-2">
  <div class="col-5">
    登録日:
  </div>
  <div class="col-7">
    <%= l @profile.created_at, format: :date_only %>
  </div>
</div>
<div class="row border-top border-bottom border-secondary py-1">
  <div class="col">
    Tweets
  </div>
</div>
<%= render @tweets %>