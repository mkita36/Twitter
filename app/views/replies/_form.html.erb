<%= form_with(model: [@tweet, reply]) do |form| %>
  <% if reply.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(reply.errors.count, "error") %> prohibited this reply from being saved:</h2>

      <ul>
        <% reply.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row border border-secondary border-top-0">
    <div class="col-3">
      <%= image_tag current_user.profile.image.url %>
    </div>
    <div class="col-7">
      <%= form.text_area :comment, :placeholder => "Tweet your reply", class: "form-control-plaintext text-white"%>
    </div>
    <div class="col-2 align-self-end">
        <%= form.submit("Reply", class: "btn btn-primary") %>
    </div>
  </div>

<% end %>
