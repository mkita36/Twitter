<div class="row border border-secondary border-top-0 align-items-center">
  <div class="col-1">
    <i class="fas fa-reply"></i>
  </div>
  <div class="col-3">
    <% if Profile.find_by(user: reply.user).image.present? %>
      <%= image_tag Profile.find_by(user_id: reply.user.id).image.variant(combine_options:{resize:"80x80^",crop:"80x80+0+0",gravity: :center}).processed, class:"rounded-circle" %>
    <% else %>
      <i class="fas fa-user-circle fa-5x" style="color: silver"></i>
    <% end %>
  </div>
  <div class="col-6">
    <div class="row">
      <%= User.find(reply.user_id).name %>
    </div>
    <div>
      <%= simple_format(reply.comment) %>
    </div>
  </div>
</div>