<div class="row align-items-center border-top border-bottom border-secondary">
  <div class="col-1">
    <div class="h3 font-weight-bold">
      <%= link_to "←", user_profile_path(current_user, current_user.profile) %>
    </div>
  </div>
  <div class="col-11 h3">
    過去のReply
  </div>
</div>

<% @replies.each do |reply| %>
  <% tweet = Tweet.find(reply.tweet_id) %>
  <div class="row border-bottom border-secondary align-items-center">
    <div class="col-3">
      <% if Profile.find_by(user_id: tweet.user_id).image.present? %>
        <%= image_tag Profile.find_by(user_id: tweet.user_id).image.variant(resize_to_fill:[80,80]).processed, class:"rounded-circle" %>
      <% else %>
        <i class="fas fa-user-circle fa-5x" style="color: silver"></i>
      <% end %>
    </div>
    <div class="col-9">
      <div class="row">
        <%= tweet.user.name %>
      </div>
      <div>
        <%= tweet.content %>
      </div>
    </div>
  </div>
  <div class="row border-bottom border-secondary align-items-center">
    <div class="col-1">
      <i class="fas fa-reply"></i>
    </div>
    <div class="col-3">
      <% if current_user.profile.image.present? %>
        <%= image_tag current_user.profile.image.variant(resize_to_fill:[80,80]).processed, class:"rounded-circle" %>
      <% else %>
        <i class="fas fa-user-circle fa-5x" style="color: silver"></i>
      <% end %>
      </div>
    <div class="col-6">
      <div class="row">
        <%= current_user.name %>
      </div>
      <div>
        <%= reply.comment %>
      </div>
    </div>
    <div class="col-2">
      <div class="row">
        <div class="col  text-center">
          <%= link_to "編集", edit_tweet_reply_path(tweet, reply) %>
        </div>
      </div>
      <div class="row">
        <div class="col  text-center">
          <%= link_to '削除', tweet_reply_path(tweet, reply), method: :delete, data: { confirm: '本当に削除しますか？' } %>
        </div>
      </div>
    </div>
  </div>
<% end %>