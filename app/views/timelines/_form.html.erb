<%= form_with(model: tweet, url: timelines_create_path) do |form| %>
	<% if tweet.errors.any? %>
		<div id="errors_explanation" >
			<h2> <%= pluralize(tweet.errors.count, "error") %> prohibited this book from being saved: </h2>

			<ul>
				<%= tweet.errors.full_messages.each do |message| %>
					<li> <%= message %> <li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="row border border-secondary border-top-0">
		<div class="col-3">
			<%= image_tag current_user.profile.image.url %>
			<%= link_to "", profile_path(id: current_user.id), class:"stretched-link" %>
		</div>
		<div class="col-7">
			<%= form.text_area :content, :placeholder => "What's happening?", class: "form-control-plaintext text-white"%>
		</div>
		<div class="col-2 align-self-end">
			<%= form.submit("Tweet", class: "btn btn-primary") %>
		</div>
	</div>

<% end %>
