<%= form_with(model: tweet, url: timelines_path) do |f| %>
	<% if tweet.errors.any? %>
		<div id="errors_explanation" >
			<h2> <%= pluralize(tweet.errors.count, "error") %> prohibited this book from being saved: </h2>

			<ul>
				<%= tweet.errors.full_messages.each do |message| %>
					<li> <%= message %> <li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="row border-bottom border-secondary align-items-center">
		<div class="col-3">
			<%= image_tag current_user.profile.image.variant(combine_options:{resize:"80x80^",crop:"80x80+0+0",gravity: :center}).processed, class:"rounded-circle" %>
			<%= link_to "", profile_path(id: current_user.id), class:"stretched-link" %>
		</div>
		<div class="col-6 col-md-7">
			<%= f.text_area :content, placeholder: "つぶやいてみよう！", class: "form-control-plaintext text-white"%>
		</div>
		<div class="col-3 col-md-2">
			<%= f.submit("Tweet", class: "btn btn-sm btn-primary") %>
		</div>
	</div>
<% end %>