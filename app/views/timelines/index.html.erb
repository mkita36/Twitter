<% if user_signed_in? %>

<div class="row border border-secondary border">
  <div class="col h3">
    Home
  </div>
</div>

<%= render partial: 'timelines/form', locals: {tweet: @tweet} %>

<div id="timelines">
  <%= render partial: 'timeline', collection: @timelines, as: 'tweet' %>
</div>

<% else %>
	<h4> <%= link_to "Sign in", new_user_session_path, class: 'post' %> </h4>
	<h4> <%= link_to "Sign up", new_user_registration_path, class: 'post' %> </h4>
<% end %>
