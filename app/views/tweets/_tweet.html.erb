<div class="row border-bottom border-secondary align-items-center">
  <div class="col-3">
    <%= image_tag current_user.profile.image.url %>
  </div>
  <div class="col-6">
    <div class="row">
      <%= current_user.name %>
    </div>
    <div class="row">
      <%= simple_format(tweet.content) %>
    </div>
  </div>
  <div class="col-3">
    <div class="row">
      <div class="col  text-center">
        <%= link_to "詳細", tweet_path(tweet)%>
      </div>
    </div>
    <div class="row">
      <div class="col  text-center">
        <%= link_to "編集", edit_tweet_path(tweet) %>
      </div>
    </div>
    <div class="row">
      <div class="col  text-center">
        <%= link_to '削除', tweet, method: :delete, data: { confirm: '本当に削除しますか？' } %>
      </div>
    </div>
  </div>
</div>