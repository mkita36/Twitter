<div class="row align-items-center border-top border-secondary py-1">
  <div class="col-1">
	  <div class="h3 font-weight-bold">
      <%= link_to "←", session[:path_back_from_tweet] %>
    </div>
  </div>
  <div class="col-11 h3">
    Tweet
  </div>
</div>
<div class="row border-bottom border-secondary align-items-center py-2">
  <%= render 'profiles/image', profile: Profile.find_by(user: @tweet.user) %>
  <div class="col-9">
    <div class="row">
      <%= @tweet.user.name %>
    </div>
    <div>
    <%= safe_join(@tweet.content.split("\n"), tag(:br)) %>
		</div>
    <div class="text-secondary">
      <%= l @tweet.created_at, format: :short %>
    </div>
	</div>
</div>
<%= render partial: 'replies/form', locals: {reply: @reply} %>
<div id="replies">
	<%= render partial: 'replies/reply', collection: @replies, as: 'reply' %>
</div>
